<div class="container">
  <div class="jumbotron mt-5">
    <h1 class="display-4 text-center">{{formation.title}}</h1>
    <div class="row">
      <div class="col-3 border">
        <img src="/images/logo-removebg.png" class="img-thumbnail rounded shadow" alt="">
      </div>
      <div class="col-9">
        <p class="lead">{{formation.resume}}</p>
      </div>
    </div>
    <hr class="my-4">
  </div>
  {{#each formation.modules }}
  <div class="card my-1">
    <div class="card-header">

      <a href="" class="btn btn-success float-right ">Validation</a>
      {{@key}} module
    </div>
    <div class="card-body ">
      <h5 class="card-title"> {{title}}</h5>
      <p class="card-text">{{description}}</p>
      <a href="{{media_url}}" class="btn btn-primary">Go to module</a>
    </div>
  </div>
  {{/each}}
</div>