<div class="container" style="width:50%">
  <h1>Add Formation </h1>
  <form action="/formation/add" method="POST">
    <div class="form-group">
      <label for="title">Titre de la formation</label>
      <input type="text" name="title" id="title" class="form-control">
    </div>

    <div class="form-group">
      <label for="image ">Image de la Formation</label>
      <input type="text" name="image" id="image" class="form-control">
    </div>

    <div class="form-group">
      <label for="resume"> resume</label>
      <textarea class="form-control" name="resume" id="resume" rows="3"></textarea>
    </div>


    <div class="form-group">
      <label for="modules"> Ajouter un module </label>
      <select name="modules" id="modules" multiple class="form-control">
        {{#each module}}
        <option value="{{_id}}">{{title}}</option>
        {{/each }}
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
  </form>
</div>