<div class='container mt-5' style="width:50%" id="test">
  <h2>Login</h2>
  <form class="form-group" action="/auth/login" method="POST" id="form-container">

    <div class="form-group">
      <label for="username">Username</label>
      <input id="username" class="form-control" type="text" name="username" placeholder="JonSnow">
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input id="password" class="form-control" type="password" name="password" placeholder="Your password">
      <br>
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}
    </div>



    <button type="submit" class="btn btn-primary">Submit</button>
    <div class="container mt-4">
      <p class="account-message">
        Don't have an account yet?
        <a href="/auth/signup">Signup</a>
      </p>
    </div>

  </form>

</div>