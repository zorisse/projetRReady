<div class='container my-5 py-3 shadow rounded' style="width:50%" id="test">
  <h2>Sign Up</h2>
  <form class="form-group" action="/auth/signup" method="POST" id="form-container">

    <div class="form-group">
      <label for="username">Username</label>
      <input id="username" class="form-control" type="text" name="username" placeholder="JonSnow">
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input id="password" class="form-control" type="password" name="password" placeholder="Your password">
      <br>
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}
    </div>
    <button type="submit" class="btn btn-primary">Sign Up</button>
  </form>
</div>